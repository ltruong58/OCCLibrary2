<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_pick_date"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.orangecoastcollege.cs273.nhoang53.occlibrary2.PickDateActivity"
    android:orientation="vertical">

    <TextView
        android:text="@string/pick_date_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textAlignment="center"
        android:layout_weight="1"/>

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dateRangeTextView"
        android:gravity="center"
        android:layout_weight="1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:id="@+id/datesLinearLayout">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/previous_button"
            android:id="@+id/previousButton"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:onClick="loadPrevious10Dates" />

        <GridLayout

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:foregroundGravity="center"
            android:columnCount="5"
            android:rowCount="2"
            android:orientation="horizontal"
            android:layout_weight="10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/datesGridLayout">
            <LinearLayout
                android:layout_width= "0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@android:color/holo_green_light"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                android:orientation="vertical">

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView32" />

                <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView16"
                     />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:background="@android:color/holo_green_light"
                android:layout_margin="3dp"
                android:orientation="vertical">

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView33" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView19" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                android:background="@android:color/holo_green_light"
                android:orientation="vertical">

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView34" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView20" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                android:orientation="vertical"
                android:background="@android:color/holo_green_light" >

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView35" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView21" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_row="0"
                android:layout_column="4"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                android:orientation="vertical"
                android:background="@android:color/holo_green_light" >

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView37" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView22" />

            </LinearLayout>
            <LinearLayout
                android:layout_width= "0dp"
                android:layout_height="0dp"
                android:layout_row="1"
                android:layout_column="0"
                android:background="@android:color/holo_green_light"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:orientation="vertical"
                android:layout_rowWeight="1">

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView38" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView23" />

            </LinearLayout>
            <LinearLayout
                android:layout_width= "0dp"
                android:layout_height="0dp"
                android:layout_row="1"
                android:layout_column="1"
                android:background="@android:color/holo_green_light"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:layout_margin="3dp"
                android:layout_rowWeight="1">

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView39" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView24" />

            </LinearLayout>
            <LinearLayout
                android:layout_width= "0dp"
                android:layout_height="0dp"
                android:layout_row="1"
                android:layout_column="2"
                android:background="@android:color/holo_green_light"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:layout_margin="3dp"
                android:layout_rowWeight="1">

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView40" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView27" />

            </LinearLayout>
            <LinearLayout
                android:layout_width= "0dp"
                android:layout_height="0dp"
                android:layout_row="1"
                android:layout_column="3"
                android:background="@android:color/holo_green_light"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:layout_margin="3dp"
                android:layout_rowWeight="1">

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView41" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView28" />

            </LinearLayout>
            <LinearLayout
                android:layout_width= "0dp"
                android:layout_height="0dp"
                android:layout_row="1"
                android:layout_column="4"
                android:background="@android:color/holo_green_light"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:orientation="vertical"
                android:layout_rowWeight="1">

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView42" />

                <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView31" />

            </LinearLayout>

        </GridLayout>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/next_button"
            android:id="@+id/nextButton"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:adjustViewBounds="false"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:onClick="loadNext10Dates" />
    </LinearLayout>

</LinearLayout>

